@using (Html.BeginForm("Four_for_99_Calendar1", "Seuss", FormMethod.Post, new { @id = "form1" }))
{
  <!--  <img src="/Images/seuss/4for99Calendar1/springformbkg.gif" class="responsiveImg formBgMain hideSmall">-->
    <div class="rightFormDiv">
        <img src="/Images/seuss/4for99Calendar1/right_top1.png" class="responsiveImg hideSmall">
        <div class="row orderForm roundedBorderBottom">
            <p class="formStep1Bg"><img src="/Images/seuss/4for99Calendar1/step1.png" class="responsiveImg formStep1"></p>

            <div class="formContainer smallMarginBottom20 adjustMobileFormContainer">
                @Html.Partial("_ShippingPartialPage", Model)
            </div>

            <p class="formStep2Bg"><img src="/Images/seuss/4for99Calendar1/step2.png" class="responsiveImg formStep2"></p>

            <div class="formContainer">
                <div class="row marginTop20 marginBot30">
                    <div class="col-md-6 col-sm-6 col-xs-5 text-center">
                        <img src="/Images/seuss/4for99Calendar1/bb.png" alt="bb" class="responsiveImg">
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-7">
                        <div class="radio stepOffer">
                            <label>
                                @Html.RadioButtonFor(model => model.isBonusSelected, true, new { @id = "radyes", @Checked = true })
                                <strong><span>*</span>  YES! Please send the 2016 Dr. Seuss Wall Calendar for just $6.99 — That's 50% off our regular price!</strong>
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                @Html.RadioButtonFor(model => model.isBonusSelected, false, new { @id = "radno" })
                                <strong>No, thank you</strong>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row marginBot6">
                    <div class="col-md-12 text-center">
                        <img src="/Images/seuss/4for99Calendar1/button_1.png" alt="" class="cursor responsiveImg" id="btnSubmit">

                        <!-- <input type="submit" value="Create" /> -->
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script>
    $(document).ready(function () {
        var err = '';

        if ('@ViewBag.ErrorMsg' != null) {
            err = '@Html.Raw(ViewBag.ErrorMsg)';
            // console.log(err);
            if (err.length > 0) {
                $("#spnErrorMessage").html(err.toString());
                $("#dialog-message").modal("toggle");
            }
        }

    })
</script>

