@{
    Layout = "~/Views/Shared/_LayoutDisneyShopping.cshtml";
}

<link href="/Content/themes/disney/index/common.css" rel="stylesheet" />
<link href="/Content/themes/disney/index/custom.css" rel="stylesheet">
<link href="/Content/themes/disney/index/media.css" rel="stylesheet">

@using (Html.BeginForm("Index", "Disney", FormMethod.Post, new { @id = "form1" }))
{

    <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 shopCart">
        <h4 class="bold">YOUR SHOPPING CART</h4>
        <div class="table-responsive">
            <table class="orderItemsTable" cellpadding="3" cellspacing="0" border="0">
                <thead>
                    <tr>
                        <th><span class="ital">4 Disney Storybooks</span> </th>
                        <th class="text-right" align="right"><span>99¢&nbsp;each</span></th>
                    </tr>
                    <tr>
                        <th><span class="ital"> Disney Ebooks</span></th>
                        <th class="text-right" align="right"><span>FREE</span></th>
                    </tr>
                    <tr>
                        <th><span class="ital"> Printable Coloring Pages</span></th>
                        <th class="text-right" align="right"><span>FREE</span></th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <td>Shipping &amp; Handling</td>
                        <td class="text-right" align="right">FREE</td>
                    </tr>
                    <tr>
                        <td>Order&nbsp;Total</td>
                        <td class="text-right" align="right">$3.96</td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="clearfix"></div>
        <h4 class="marginTop20 bold">Step 1 of 2: Enter your email address</h4>
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" id="txtEmail" placeholder="Email">
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn button">Submit <span style="font-size:80%">▶</span></button>
        </div>
        <div class="form-group text-center">
            <a href="#" target="_blank"><img src="/images/disney/index/download.png" alt="download" class="responsiveImg"></a>
        </div>
    </div>
    <div class="clearfix"></div>

}

