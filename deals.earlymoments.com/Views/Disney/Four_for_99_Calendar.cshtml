@using (Html.BeginForm("Four_for_99_Calendar", "Disney", FormMethod.Post, new { @id = "form1" }))
{
  <!--  <img src="/Images/disney/4for99Calendar/springformbkg.gif" class="responsiveImg formBgMain hideSmall">-->
    <div class="rightFormDiv">
        <img src="/Images/disney/4for99Calendar/freeStar.png" class="responsiveImg hideSmall freeStar">
        <img src="/Images/disney/4for99Calendar/right_top1.png" class="responsiveImg hideSmall">
        <div class="row orderForm roundedBorderBottom">
            <p class="formStep1Bg"><img src="/Images/disney/4for99Calendar/step1.png" class="responsiveImg formStep1"></p>

            <div class="formContainer smallMarginBottom20 adjustMobileFormContainer">
                @Html.Partial("_ShippingPartialPage", Model)
            </div>

            <p class="formStep2Bg"><img src="/Images/disney/4for99Calendar/step2.png" class="responsiveImg formStep2"></p>

            <div class="formContainer">
                <div class="row text-center">
                    <div class="col-md-12 smallMarginBottom10 f14">
                        Please send <em>Lady &amp; The Tramp</em>, <em>The Lion King</em><br class="hideSmall"> and the<em> two</em> books checked below:
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-md-3 col-sm-6 col-xs-6">
                        <figure>
                            <img src="/Images/disney/4for99Calendar/choice_1.png" alt="Planes" class="responsiveImg" id="imgChoice1">
                            <figcaption>
                                <input type="checkbox" name="SelectedBooks" class="required chkChoice" id="chkChoice1" value="19631472" runat="server" onclick="selected_books(this)">
                                <p>Planes</p>
                            </figcaption>
                        </figure>
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-6">
                        <figure>
                            <img src="/Images/disney/4for99Calendar/choice_2.png" alt="Inside Out" class="responsiveImg" id="imgChoice2">
                            <figcaption>
                                <input type="checkbox" name="SelectedBooks" class="required chkChoice" id="chkChoice2" value="19632347" runat="server" onclick="selected_books(this)">
                                <p>Inside Out</p>
                            </figcaption>
                        </figure>
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-6">
                        <figure>
                            <img src="/Images/disney/4for99Calendar/choice_3.png" alt="Monsters University" class="responsiveImg" id="imgChoice3">
                            <figcaption>
                                <input type="checkbox" name="SelectedBooks" class="required chkChoice" id="chkChoice3" value="19631470" runat="server" onclick="selected_books(this)">
                                <p>Monsters University</p>
                            </figcaption>
                        </figure>
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-6">
                        <figure>
                            <img src="/Images/disney/4for99Calendar/choice_4.png" alt="Frozen" class="responsiveImg" id="imgChoice4">
                            <figcaption>
                                <input type="checkbox" name="SelectedBooks" class="required chkChoice" id="chkChoice4" value="19631471" runat="server" onclick="selected_books(this)">
                                <p>Frozen</p>
                            </figcaption>
                        </figure>
                    </div>
                    <div class="clearfix"></div>
                    <div class="col-md-12 smallMarginTop20">
                        <img src="/Images/disney/4for99Calendar/bonus-banner.jpg" alt="bonus" class="responsiveImg">
                    </div>
                </div>
                <div class="row marginTop20 marginBot30">
                    <div class="col-md-6 col-sm-6 col-xs-5 text-center">
                        <img src="/Images/disney/4for99Calendar/bb.png" alt="bb" class="responsiveImg">
                    </div>
                    <div class="col-md-6 col-sm-6 col-xs-7">
                        <div class="radio stepOffer">
                            <label>
                                @Html.RadioButtonFor(model => model.isBonusSelected, true, new { @id = "radyes", @Checked = true })
                                <strong><span>*</span>  YES! Please send the 2016 Dr. Seuss Wall Calendar for just $6.99 — That's 50% off our regular price!</strong>
                            </label>
                        </div>
                        <div class="radio">
                            <label>
                                @Html.RadioButtonFor(model => model.isBonusSelected, false, new { @id = "radno" })
                                <strong>No, thank you</strong>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row marginBot6">
                    <div class="col-md-12 text-center">
                        <img src="/Images/disney/4for99Calendar/button_1.png" alt="" class="cursor responsiveImg" id="btnSubmit">

                        <!-- <input type="submit" value="Create" /> -->
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--header modal-->
    <div class="modal fade" id="modalHeaderMobile" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <button type="button" class="close red" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <p>Ebooks are a convenient way to build a great library, and are perfect for on-the-go reading. Every Disney book that you purchase from Early Moments includes a complimentary companion ebook that can be read on any smartphone, tablet or computer.</p>
                    <p>The ebooks can be read on your iPad through the Early Moments app (free on iTunes) or you can log into your account through any internet browswer on any type of device to read the ebooks using the Early Moments eReader.</p>
                </div>
            </div>
        </div>
    </div>

}
<script>
    $(document).ready(function () {
        var err = '';

        if ('@ViewBag.ErrorMsg' != null) {
            err = '@Html.Raw(ViewBag.ErrorMsg)';
            //console.log(err);
            if (err.length > 0) {
                $("#spnErrorMessage").html(err.toString());
                $("#dialog-message").modal("toggle");
            }
        }

    })
</script>

@section headerStrip {
    <header class="row">
        <div class="col-md-12 noPaddingLR">
            <img src="/Images/disney/4for99Calendar/header.jpg" alt="Get 4 Books for just $1!" class="responsiveImg hideSmall" id="headerImage ">
            <img src="/Images/disney/4for99Calendar/mobile_headerfall.png" alt="Get 4 Books for just 99¢ each!" class="hideBig hand" data-toggle="modal" data-target="#modalHeaderMobile" style="width:100%;">
